<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainKhususActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/khusus1"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:src="@drawable/khusus1" />

        <ImageView
            android:id="@+id/khusus2"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:src="@drawable/khusus2"/>

        <ImageView
            android:id="@+id/khusus3"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:src="@drawable/khusus3"/>
        <ImageView
            android:id="@+id/khusus4"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:src="@drawable/khusus4"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>