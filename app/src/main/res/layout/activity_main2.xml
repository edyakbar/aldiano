<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rikawidyakartika.iqro.Main2Activity">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="0.18"
        android:paddingTop="40dp"
        android:stretchColumns="*">

        <TableRow android:paddingTop="50dp">
            <ImageView
                android:id="@+id/ft"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/ft" />
            <ImageView
                android:id="@+id/fathah"
                android:layout_width="170dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:paddingRight="40dp"
                android:src="@drawable/fathah" />

        </TableRow>

        <TableRow android:paddingTop="50dp">
            <ImageView
                android:id="@+id/kt"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/kt" />
            <ImageView
                android:id="@+id/kasroh"
                android:layout_width="170dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:paddingRight="40dp"
                android:src="@drawable/kasroh" />

        </TableRow>

        <TableRow android:paddingTop="50dp">
            <ImageView
                android:id="@+id/dt"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/dt" />
            <ImageView
                android:id="@+id/domah"
                android:layout_width="170dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:paddingRight="40dp"
                android:src="@drawable/domah" />

        </TableRow>

    </TableLayout>



</LinearLayout>
